# =============================================================================
# FileSharer Frontend Configuration
# =============================================================================

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Application Settings
VITE_APP_TITLE=FileSharer
VITE_APP_DESCRIPTION=現代化的檔案分享系統
VITE_APP_VERSION=1.0.0
VITE_ENABLE_DEV_TOOLS=true

# UI Settings
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LOCALE=zh-TW

# Feature Flags
VITE_ENABLE_DRAG_DROP=true
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_FILE_PREVIEW=true

# File Upload Limits
VITE_MAX_FILE_SIZE_MB=100
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,zip
VITE_MAX_FILES_PER_UPLOAD=10

# =============================================================================
# Environment Specific Examples
# =============================================================================

# Development:
# VITE_API_BASE_URL=http://localhost:8000

# Production:
# VITE_API_BASE_URL=https://api.your-domain.com
# VITE_ENABLE_DEV_TOOLS=false

# Local Backend Development (if backend runs on host):
# VITE_API_BASE_URL=http://localhost:8080