# ==============================================
# FileSharer Backend Environment Configuration
# ==============================================

# Project Information
PROJECT_NAME="FileSharer"
VERSION="1.0.0"
ENVIRONMENT="development"

# ==============================================
# Security Settings
# ==============================================

# JWT Settings - 請更換為您自己的密鑰
JWT_SECRET_KEY="your-secret-key-here-please-change-this"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh Token Settings
REFRESH_TOKEN_EXPIRE_DAYS=7
REFRESH_TOKEN_COOKIE_NAME="file-sharer_refresh_token"
# 在開發環境中，如果沒有 HTTPS，可以設為 False
REFRESH_TOKEN_COOKIE_SECURE=False
REFRESH_TOKEN_COOKIE_HTTPONLY=True
REFRESH_TOKEN_COOKIE_SAMESITE="lax"

# ==============================================
# Database Configuration
# ==============================================

# 開發環境 - 使用 Docker 的 MySQL
DATABASE_URL="mysql+pymysql://admin:admin_password@localhost:3306/file_sharer"

# 生產環境範例 - 使用外部資料庫 (如 AWS RDS)
# DATABASE_URL="mysql+pymysql://username:password@your-rds-endpoint:3306/database_name"

# Docker MySQL 設定 (用於 docker-compose.yaml)
MYSQL_ROOT_PASSWORD="root_password"
MYSQL_DATABASE="file_sharer"
MYSQL_USER="admin"
MYSQL_PASSWORD="admin_password"

# ==============================================
# AWS S3 Configuration
# ==============================================

# AWS 區域
AWS_REGION="us-east-1"

# AWS 憑證 - 請填入您的 AWS 憑證
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
# AWS_SESSION_TOKEN="your_aws_session_token"  # 僅在使用臨時憑證時需要

# S3 儲存桶名稱
S3_BUCKET_NAME="your-s3-bucket-name"

# 預簽章 URL 設定
PRESIGNED_URL_EXPIRE_SECONDS=3600
PRESIGNED_URL_EXPIRE_SECONDS_MAX=86400

# ==============================================
# OAuth Settings (Optional)
# ==============================================

# Google OAuth (如果需要 Google 登入功能)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ==============================================
# Logging Configuration
# ==============================================

LOG_LEVEL="info"

# AWS CloudWatch 設定 (生產環境可選)
CLOUDWATCH_LOG_GROUP=""
CLOUDWATCH_LOG_STREAM=""

# ==============================================
# Development Settings
# ==============================================

# 開發模式設定
DEBUG=true

# CORS 設定 (開發環境)
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# ==============================================
# Production Settings (註解掉，僅供參考)
# ==============================================

# 生產環境設定範例
# DEBUG=false
# CORS_ORIGINS="https://your-frontend-domain.com"
# REFRESH_TOKEN_COOKIE_SECURE=true
# REFRESH_TOKEN_COOKIE_SAMESITE="strict"

# ==============================================
# 設定說明
# ==============================================

# 1. JWT_SECRET_KEY: 請務必更換為強密碼，建議使用 openssl rand -hex 32 生成
# 2. DATABASE_URL: 開發環境使用 localhost，生產環境使用實際的資料庫連線字串
# 3. AWS 憑證: 請填入您的 AWS IAM 使用者憑證，確保該使用者有 S3 存取權限
# 4. S3_BUCKET_NAME: 請建立一個 S3 儲存桶並填入名稱
# 5. 生產環境部署時，請確保設定 REFRESH_TOKEN_COOKIE_SECURE=true